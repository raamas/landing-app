---
import { AstroFont } from 'astro-font';
import "./../tailus.css"
const APIURL = "https://diplomatic-cat-f1915b4e91.strapiapp.com/api/landing"
const response = await fetch(APIURL)
const data = await response.json()

const content = {...data?.data}
let lines = content?.Subheading.split("\n")
console.log(content)
---

<html lang="en">
	<head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content="Template built with tailwindcss using Tailus blocks v2" />
        <title>Tailus astro theme</title>

        <AstroFont
            config={[
                {
                    src: [],
                    name: "Urbanist",
                    preload: true,
                    display: "swap",
                    selector: "html",
                    fallback: "sans-serif",
                    googleFontsURL: 'https://fonts.googleapis.com/css2?family=Urbanist:wght@400;500;600;700&display=swap',
                },
            ]}
        />
    </head>
  <body class="bg-white text-gray-900 flex items-center justify-center min-h-screen">
	<div aria-hidden="true" class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20">
        <div class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"></div>
        <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"></div>
    </div>
    <main class="text-center p-6 max-w-lg space-y-6">
      <h1 class="text-4xl font-bold">{content.Heading}</h1>
      <span class="text-lg text-gray-700 my-auto mb-16">
		{lines.map(l => {
			return <p>{l}<br></p>
		}) }
      </span>

      <!--img
        src="https://via.placeholder.com/400x200"
        alt="Promotional Banner"
        class="mx-auto rounded-lg shadow-md"
      /-->

	  <form class="mt-4 flex flex-col sm:flex-row items-center gap-4 w-full">
		<input
		  type="tel"
		  placeholder="Enter your phone number"
		  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
		  required
		/>
		<button
		  type="submit"
		  class="w-full text-nowrap  sm:w-auto px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition"
		>
		  Notify Me
		</button>
	  </form>
      </form>
    </main>
  </body>
</html>