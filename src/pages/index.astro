    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Template built with tailwindcss using Tailus blocks v2"
    />
    <title>Tailus astro theme</title>

    <AstroFont
      config={[
        {
          src: [],
          name: "Urbanist",
          preload: true,
          display: "swap",
          selector: "html",
